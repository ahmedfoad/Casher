<div class="row"   style="height:150px;">
    <div class="col-md-12">
        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-paper-plane font-yellow-casablanca" style="color: #5c9acf !important;"></i>
                    من فضلك اختار الصنف
                </div>
                <div class="actions">
                    <a class="btn red btn-sm fancymodal-close" id='closebox' ng-click="closeUiModal()" style="padding-left:15px;" href="#"> إغلاق </a>
                </div>
            </div>
            <div class='portlet-body'>
                <div class='row' style="margin: auto;">
                    <input ng-model="Search" ng-keyup="keyupevt()" class='form-control' placeholder='بحث باسم الصنف' type='text' />
                </div>
                <div class='row' style="text-align:center;">
                    <div class='table-responsive' style="max-height: 300px;margin-top:10px;" id="ViewList">
                        <table class='table table-striped' style='width:90%;margin:auto'>
                            <thead>
                                <tr>
                                    <th> اسم الصنف </th>
                                    <th> اسم الشركة </th>
                                    <th> اسم القسم </th>
                                    <th> السعر </th>
                                    <th> ضريبة القيمة المضافة </th>
                                    <th> اجمالى السعر </th>
                                </tr>
                            </thead>
                            <tbody id="GetDealingTypeTable">
                                <tr ng-repeat="item in ProductList track by $index" ng-click="clicktr(item)">
                                    <td>{{item.Name}}</td>
                                    <td>{{item.Company_Name}}</td>
                                    <td>{{item.Department_Name}}</td>
                                    <td>{{item.Price_Unit}}</td>
                                    <td>{{item.Taxes}}</td>
                                    <td>{{item.TotalPrice}}</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
        <!-- END Portlet PORTLET-->
    </div>
</div>




